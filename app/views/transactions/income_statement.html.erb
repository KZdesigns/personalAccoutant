<h1 style="border-bottom: 5px solid black">Income Statement</h1>
<div style="padding-left: 20px;">
    <h2 style="padding-left: 10px;">Income Transactions</h2>
    <table style="padding-left: 40px;">
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>GL Account</th>
        </tr>
        <% @transactions.each do |transaction| %>
            <% if transaction.gl_account.gl_type == "income" %>
                <tr>
                    <td style="padding: 10px;">Date: <%= transaction.date %></td>
                    <td style="padding: 10px;">Amount: $<%= transaction.amount %></td>
                    <td style="padding: 10px;"><%= render transaction.gl_account%></td>
                </tr>
            <% end %>
        <% end %>
    </table>
    <div>
        <h3 style="padding-left: 10px;">Total Income: <%= @incomeTotal %></h3>
    </div>
    <h2 style="padding-left: 10px;">Expense Transactions</h2>
    <table style="padding-left: 40px;">
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>GL Account</th>
        </tr>
        <% @transactions.each do |transaction| %>
            <% if transaction.gl_account.gl_type == "expense" %>
                <tr>
                    <td style="padding: 10px;">Date: <%= transaction.date %></td>
                    <td style="padding: 10px;">Amount: $<%= transaction.amount %></td>
                    <td style="padding: 10px;"><%= render transaction.gl_account%></td>
                </tr>
            <% end %>
        <% end %>
    </table>
    <div>
        <h3 style="padding-left: 10px;">Total Expense: <%= @expenseTotal %></h3>
    </div>
</div>
<div style="margin: 50px 0px 0px 0px">
    <h2>Net Income: <%= @netIncome %></h2>
</div>
<div style="border-top: 5px solid black; padding: 10px 0px 0px 0px">
    <%= button_to "Back To Home", root_path, :method => "get"%>
</div>


