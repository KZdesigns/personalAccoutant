<h1>GL Balances</h1>
<table>
    <th>GL Account</th>
    <th>Total</th>
    <% @balances.each do |balance| %>
        <tr>
            <% args = balance.split(",") %>
            <td style="padding: 10px 50px 10px 20px"><%= args[0] + " " + args[3]%></td>
            <td style="padding: 10px 10px 10px 20px"><%= args[4]%></td>
        </tr>
    <% end %>
</table>
<br>
<%= button_to "Back To Home", root_path, :method => "get" %>    